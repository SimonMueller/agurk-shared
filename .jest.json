{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/*.ts",
    "!**/node_modules/**",
    "!**/coverage/**",
    "!**/build/**",
    "!**/test/**",
    "!**/types/**"
  ],
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testMatch": ["**/test/**/*.test.ts"],
  "testEnvironment": "node"
}
